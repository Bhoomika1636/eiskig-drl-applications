{
    "setup": {
        "environment_import": "environment.supplysystem_a.SupplysystemA",
        "agent_import": "stable_baselines3.td3.TD3",
        "vectorizer_import": "stable_baselines3.common.vec_env.SubprocVecEnv",
        "policy_import": "stable_baselines3.td3.policies.TD3Policy",
        "tensorboard_log": true,
        "monitor_wrapper": true,
        "norm_wrapper_obs": true,
        "norm_wrapper_reward": true
    },
    "paths": {
        "relpath_scenarios": "data/",
        "relpath_results": "results/"
    },
    "settings": {
        "sampling_time": 180,
        "save_model_every_x_episodes": 100,
        "episode_duration": 259200,
        "n_episodes_learn": 1000,
        "n_episodes_play": 10,
        "n_environments": 1,
        "plot_interval": 100,
        "verbose": 1,
        "seed": 123
    },
    "environment_specific": {
        "variant": "reduced_state",
        "discretize_action_space": false,
        "reward_shaping": false,
        "temperature_heat_init_max": 365,
        "temperature_heat_init_min": 320,
        "temperature_difference_top_bottom": 20,
        "scenario_time_begin": "2017-01-01 00:00",
        "scenario_time_end": "2017-12-27 00:00",
        "random_sampling": true,
        "poweron_cost_combinedheatpower": 4,
        "poweron_cost_condensingboiler": 2,
        "poweron_cost_immersionheater": 1,
        "abort_costs": 50000,
        "policyshaping_costs": 1,
        "temperature_cost_heat": 1,
        "temperature_reward_heat": 0,
        "temperature_cost_heat_min": 323.15,
        "temperature_cost_heat_max": 363.15,
        "temperature_cost_prod_heat_min": 343.15,
        "temperature_cost_prod_heat_max": 363.15,
        "power_cost_max": 320000,
        "tax_el_per_kwh": 0.10,
        "tax_el_produced_per_kwh": 0.02,
        "tax_gas_per_kwh": 0.02,
        "peak_cost_per_kw": 1.0,
        "scenario_files":
            [{
                "path": "Factory_2017.csv",
                "interpolation_method": "interpolate",
                "resample_method": "asfreq",
                "time_conversion_str": "%Y-%m-%d %H:%M",
                "scale_factors": {"power_electricity": 12.5,
                                  "power_heat": 16.0,
                                  "power_cold": 60.5,
                                  "power_gas": 6.25,
                                  "time_availability": 1}
            },
            {
                "path": "EnergyMarkets_2017.csv",
                "interpolation_method": "ffill",
                "resample_method": "asfreq",
                "time_conversion_str": "%Y-%m-%d %H:%M",
                "scale_factors": {"electrical_energy_price": 0.001,
                                  "gas_price": 0.001}
            }]
    },
    "agent_specific": {
        "learning_rate": 0.00020,
        "buffer_size": 10000000,
        "learning_starts": 100,
        "batch_size": 128,
        "tau": 0.005,
        "gamma": 0.99,
        "train_freq": 20,
        "gradient_steps": 10,
        "action_noise": null,
        "replay_buffer_class": null,
        "policy_delay": 2,
        "target_policy_noise": 0.1,
        "target_noise_clip": 0.5,
        "verbose": 1,
        "policy_kwargs": {
            "net_arch": [500, 400, 300]
        }
    }
}
