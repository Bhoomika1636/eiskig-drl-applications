{
    "setup": {
        "environment_import": "environment.supplysystem_Merck.SupplysystemMerck",
        "agent_import": "controller.rule_based_controller.RuleBasedController",
        "norm_wrapper_obs": false,
        "norm_wrapper_reward": false
    },
    "paths": {
        "relpath_scenarios": "data/",
        "relpath_results": "results/"
    },
    "settings": {
        "sampling_time": 180,
        "episode_duration": 259200,
        "n_episodes_learn": 1000,
        "n_episodes_play": 1,
        "n_environments": 1,
        "plot_interval": 100,
        "verbose": 2,
        "seed": 123
    },
    "environment_specific": {
        "variant": "reduced_state",
        "discretize_action_space": false,
        "reward_shaping": true,

        "use_conventional": true,
        "random_params": false,
        "SOC_min": 0.0,
        "SOC_max": 100.0,

        
        
        "scenario_time_begin": "2017-01-01 00:00",
        "scenario_time_end": "2017-12-27 00:00",
        "random_sampling": false,


        "switch_cost_coolingTower": 20,
        "switch_cost_valve_bypass": 1,
        "switch_cost_chiller": 20,
        "switch_cost_pump_chiller": 5,
        "switch_cost_iceStorage": 30,

        "temperature_goal_cooling": 23,
        "temperature_cost_cooling_min": 15,
        "temperature_cost_cooling_max": 27.5,
        "temperature_cost_cooling": 1,

        "temperature_goal_cooled": 6,
        "temperature_cost_cooled_min": 5,
        "temperature_cost_cooled_max": 7.5,
        "temperature_cost_cooled": 1,

        "abort_costs": 50000,
        "policyshaping_costs": 0,


        
        "scenario_files":
            [{
                "path": "Factory_2017_Scaled.csv",
                "interpolation_method": "ffill",
                "resample_method": "asfreq",
                "time_conversion_str": "%Y-%m-%d %H:%M",
                "scale_factors": {"power_cold": 1}
            },
            {
                "path": "EnergyMarkets_2017.csv",
                "interpolation_method": "ffill",
                "resample_method": "asfreq",
                "time_conversion_str": "%Y-%m-%d %H:%M",
                "scale_factors": {"electrical_energy_price": 0.001,
                                  "gas_price": 0.001}
            },
            {
                "path": "Weather_Frankfurt_2017.csv",
                "interpolation_method": "ffill",
                "resample_method": "asfreq",
                "time_conversion_str": "%Y-%m-%d %H:%M",
                "scale_factors": {"air_pressure": 100,
                                  "air_temperature": 1,
                                  "relative_air_humidity": 1,
                                  "rain_indicator": 1,
                                  "rainfall": 1,
                                  "wind_direction": 1,
                                  "wind_speed": 1,
                                  "clouds": 1,
                                  "global_radiation": 1,
                                  "direct_radiation": 1,
                                  "diffuse_radiation": 1}
            }]
    },
    "agent_specific": {
    }
}
