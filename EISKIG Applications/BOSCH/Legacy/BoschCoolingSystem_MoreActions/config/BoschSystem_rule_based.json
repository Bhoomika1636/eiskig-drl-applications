{
    "setup": {
        "environment_import": "environment.boschSystem.BoschSystem",
        "agent_import": "controller.rule_based_controller.RuleBasedController",
        "norm_wrapper_obs": false,
        "norm_wrapper_reward": false
    },
    "paths": {
        "relpath_scenarios": "data/",
        "relpath_results": "results/"
    },
    "settings": {
        "sampling_time": 120,
        "episode_duration": 259200,
        "n_episodes_learn": 1000,
        "n_episodes_play": 1,
        "n_environments": 1,
        "plot_interval": 100,
        "verbose": 2,
        "seed": 123
    },
    "environment_specific": {
        "discretize_action_space": false,
        "up_down_discrete": false,
        "reward_shaping": false,
        "scenario_time_begin": "2017-01-01 00:00",
        "scenario_time_end": "2017-12-27 00:00",
        "random_sampling": true,
        "use_policy_shaping": false,
        "scenario_files": [
            {
                "path": "Factory_2017.csv",
                "interpolation_method": "interpolate",
                "resample_method": "asfreq",
                "time_conversion_str": "%Y-%m-%d %H:%M",
                "scale_factors": {
                    "power_electricity": 12.5,
                    "power_heat": 16.0,
                    "power_cold": 60.5,
                    "power_gas": 6.25,
                    "time_availability": 1
                }
            },
            {
                "path": "EnergyMarkets_2017.csv",
                "interpolation_method": "ffill",
                "resample_method": "asfreq",
                "time_conversion_str": "%Y-%m-%d %H:%M",
                "scale_factors": {
                    "electrical_energy_price": 0.001,
                    "gas_price": 0.001
                }
            },
            {
                "path": "Weather_Frankfurt_2017.csv",
                "interpolation_method": "interpolate",
                "resample_method": "asfreq",
                "time_conversion_str": "%Y-%m-%d %H:%M",
                "scale_factors": {
                    "air_pressure": 1,
                    "air_temperature": 1,
                    "relative_air_humidity": 1,
                    "rain_indicator": 1,
                    "rainfall": 1,
                    "wind_direction": 1,
                    "wind_speed": 1,
                    "clouds": 1,
                    "global_radiation": 1,
                    "direct_radiation": 1,
                    "diffuse_radiation": 1
                }
            }
        ]
    },
    "agent_specific": {}
}