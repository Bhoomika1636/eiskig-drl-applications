{
    "setup": {
        "environment_import": "environment.equinix_PID_ohne_wBus.Equinix",
        "agent_import": "controller.rule_based_controller.RuleBasedController",
        "norm_wrapper_obs": false,
        "norm_wrapper_reward": false
    },
    "paths": {
        "relpath_scenarios": "data/",
        "relpath_results": "results/"
    },
    "settings": {
        "sampling_time": 180,
        "episode_duration": 259200,
        "n_episodes_learn": 1000,
        "n_episodes_play": 1,
        "n_environments": 1,
        "plot_interval": 100,
        "verbose": 2,
        "seed": 117
    },
    "environment_specific": {
        "variant": "reduced_state",
        "discretize_action_space": false,
        "reward_shaping": false,
        "scenario_time_begin": "2017-01-01 00:00",
        "scenario_time_end": "2017-12-27 00:00",
        "random_sampling": false,
        "poweron_cost_chiller1": 1,
        "poweron_cost_chiller2": 1,
        "poweron_cost_coolingtower": 0.5,
        "poweron_cost_adiabatic": 0.2,
        "abort_costs": 50000,
        "policyshaping_costs": 1,
        "temperature_cost_T_Serverroom_min": 289.15,
        "temperature_cost_T_Serverroom_max": 292.15,
        "temperature_cost_cool": 1,
        "temperature_reward_cool": 0,
        "power_cost_max": 320000,
        "tax_el_per_kwh": 0.10,
        "peak_cost_per_kw": 1.0,
        "scenario_files":
            [{
                "path": "Heat_2018.csv",
                "interpolation_method": "interpolate",
                "resample_method": "asfreq",
                "time_conversion_str": "%Y-%m-%d %H:%M",
                "scale_factors": {}
                
            },
            {
                "path": "EnergyMarkets_2018.csv",
                "interpolation_method": "ffill",
                "resample_method": "asfreq",
                "time_conversion_str": "%Y-%m-%d %H:%M",
                "scale_factors": {"electrical_energy_price": 0.001,
                                  "gas_price": 0.001}
            },
            {
                "path": "Weather_Frankfurt_2018.csv",
                "interpolation_method": "interpolate",
                "resample_method": "asfreq",
                "time_conversion_str": "%Y-%m-%d %H:%M",
                "scale_factors": {"air_pressure": 1,
                                  "air_temperature": 1,
                                  "relative_air_humidity": 1,
                                  "rain_indicator": 1,
                                  "rainfall": 1,
                                  "wind_direction": 1,
                                  "wind_speed": 1,
                                  "clouds": 1,
                                  "global_radiation": 1,
                                  "direct_radiation": 1,
                                  "diffuse_radiation": 1}
            }]
    },
    "agent_specific": {
    }
}
